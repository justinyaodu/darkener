{
  "manifest_version": 2,
  "name": "Darkener",
  "version": "0.0.1",
  "description": "A highly configurable dark mode extension.",

  "browser_specific_settings": {
    "gecko": {
      "id": "darkener@justinyaodu.com"
    }
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "web_accessible_resources": [
    "style/invert.css",
    "style/invert-all.css",
    "style/html-black.css",
    "style/html-white.css",
    "style/body-black.css",
    "style/body-white.css",
    "style/hide.css",
    "style/unhide.css",
    "config/default.json"
  ],

  "background": {
    "scripts": [
      "js/dkn-dynamic.js",
      "js/dkn-config.js",
      "js/dkn-background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_start",
      "css": ["style/hide.css"]
    },
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_end",
      "js": [
        "js/dkn-dynamic.js",
        "js/dkn-page.js"
      ]
    }
  ],

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.svg",
      "96": "icon.svg"
    }
  }
}
